#might not use this file

from PIL import Image

# 1. Turn off the safety limit so Python allows us to build a massive image
Image.MAX_IMAGE_PIXELS = None

# We will store the opened original images in this list
images = []

print("Loading full-resolution images. This might take a moment...")

# 2. Load files 1.tif through 9.tif
for i in range(1, 10):
    # Match your folder path
    filename = f"/Users/boi/Desktop/2026projects/HackEDD/images/{i}.tif"
    
    # Open the image in standard color mode (no shrinking!)
    img = Image.open(filename).convert("RGB")
    images.append(img)

# 3. Get the exact size of one original image
tile_width = images[0].width
tile_height = images[0].height

print(f"Each tile is {tile_width}x{tile_height} pixels.")
print("Stitching the massive grid together...")

# 4. Create a giant blank canvas for a 3x3 grid
master_width = tile_width * 3
master_height = tile_height * 3
master_map = Image.new('RGB', (master_width, master_height))

# 5. Paste each full-size image into the correct spot on the canvas
index = 0
for row in range(3):
    for col in range(3):
        # Calculate the X and Y coordinates for the top-left corner
        x_pos = col * tile_width
        y_pos = row * tile_height
        
        # Paste the original image onto the master canvas
        master_map.paste(images[index], (x_pos, y_pos))
        index += 1

# 6. Save the final stitched masterpiece
output_path = "/Users/boi/Desktop/2026projects/HackEDD/images/master_map.tif"
master_map.save(output_path)

print(f"Success! Your full-resolution master map is saved at: {output_path}")
print(f"Final map size: {master_width}x{master_height} pixels.")
